@model Pager
@if (Model.EndPage > 1)
{
    <ul class="pagination">
        @if (Model.CurrentPage > 1)
                {
            <li>
                @Html.ActionLink("First", "Index", new { currentFilter = ViewBag.CurrentFilter, currentArtist = ViewBag.CurrentArtist, currentTitle = ViewBag.CurrentTitle, page = 1 })
                @*<a href="~/Home/Index">First</a>*@
            </li>
            <li>
                @Html.ActionLink("Previous", "Index", new { currentFilter = ViewBag.CurrentFilter, currentArtist = ViewBag.CurrentArtist, currentTitle = ViewBag.CurrentTitle, page = (Model.CurrentPage - 1) })
                @*<a href="~/Home/Index?page=@(Model.CurrentPage - 1)">Previous</a>*@
            </li>
        }

        @for (var page = Model.StartPage; page <= Model.EndPage; page++)
                {
            <li class="@(page == Model.CurrentPage ? "active" : "")">
                @Html.ActionLink(page.ToString(), "Index", new { currentFilter = ViewBag.CurrentFilter, currentArtist = ViewBag.CurrentArtist, currentTitle = ViewBag.CurrentTitle, page = page })
                @*<a href="~/@ViewContext.RouteData.Values["controller"]/Index?page=@page">@page</a>*@
            </li>}

        @if (Model.CurrentPage < Model.TotalPages)
                {
            <li>
                @Html.ActionLink("Next", "Index", new { currentFilter = ViewBag.CurrentFilter, currentArtist = ViewBag.CurrentArtist, currentTitle = ViewBag.CurrentTitle, page = Model.CurrentPage + 1 })
                @*<a href="~/Home/Index?page=@(Model.CurrentPage + 1)">Next</a>*@
            </li>
            <li>
                @Html.ActionLink("Last", "Index", new { currentFilter = ViewBag.CurrentFilter, currentArtist = ViewBag.CurrentArtist, currentTitle = ViewBag.CurrentTitle, page = Model.TotalPages })
                @*<a href="~/Home/Index?page=@(Model.TotalPages)">Last</a>*@
            </li>
        }
    </ul>
}